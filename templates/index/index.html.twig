{% extends 'base.html.twig' %}

{% block title %}Sitrans{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">{{ 'index.acceuil'|trans }}</h1>
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img src="/img/image 1.png" class="d-block w-100" alt="camion">
            </div>
            <div class="carousel-item">
            <img src="/img/BMW_Isetta,_Bj._1955_(2015-08-26_2997_b_Ausschnitt).jpg" class="d-block w-100" alt="isetta">
            </div>
            <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <p class="text-center">{{ 'index.desc' |trans }}</p>
    <p class="text-center">{{ 'index.description'|trans }}</p>
</div>
{% endblock %}